                                                <div class="col-md-4 col-sm-2 col-xs-3">
                                                    <img src="~/Assets/client/images/flickr-image2.jpg" alt="">
                                                </div>
                                                <div class="col-md-4 col-sm-2 col-xs-3">
                                                    <img src="~/Assets/client/images/flickr-image3.jpg" alt="">
                                                </div>
                                                <div class="col-md-4 col-sm-2 col-xs-3">
                                                    <img src="~/Assets/client/images/flickr-image4.jpg" alt="">
                                                </div>
                                                <div class="col-md-4 col-sm-2 col-xs-3">
                                                    <img src="~/Assets/client/images/flickr-image1.jpg" alt="">
                                                </div>
                                                <div class="col-md-4 col-sm-2 col-xs-3">
                                                    <img src="~/Assets/client/images/flickr-image2.jpg" alt="">
                                                </div>
                                                <div class="col-md-4 col-sm-2 col-xs-3">
                                                    <img src="~/Assets/client/images/flickr-image3.jpg" alt="">
                                                </div>
                                                <div class="col-md-4 col-sm-2 col-xs-3">
                                                    <img src="~/Assets/client/images/flickr-image4.jpg" alt="">
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
