@model BaiTapLon.Models.tblProduct



@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section heading{
    <div id="heading">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="heading-content">
                        <h2>Sản phẩm của chúng tôi</h2>
                        <span><a href="@Url.Action("Index","Home")">Trang chủ</a> / <a href="@Url.Action("Index","tblProducts")">Sản Phẩm</a></span>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

<div id="product-post">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="heading-section">
                    <h2>Chi tiết sản phẩm</h2>
                    <img src="~/Assets/client/images/under-heading.png" alt="" />
                </div>
            </div>
        </div>
        <div id="single-blog" class="page-section first-section">
            <div class="container">
                <div class="row">
                    <div class="product-item col-md-12">
                        <div class="row">
                            <div class="col-md-8">
                                <div class="image">
                                    <div class="image-post">
                                        @{
                                            //Lấy đường dẫn file ảnh
                                            string Path = "~/wwwroot/images/" + Model.ImagePath;
                                        }
                                        <img src="@Url.Content(Path)" width="400" heigh="250" class="img-thumbnail" />
                                    </div>
                                </div>
                                <div class="product-content">
                                    <div class="product-title">
                                        <h4>@Html.DisplayFor(model => model.ProdName)</h4>
                                    </div>
                                    <div>
                                        <div class="divide-line">
                                            <img src="~/Assets/client/images/div-line.png" alt="" />
                                        </div>
                                        <dl class="dl-horizontal">
                                            <dt>
                                                Danh mục
                                            </dt>

                                            <dd>
                                                @Html.DisplayFor(model => model.Categoryid)
                                            </dd>

                                            <dt>
                                                Tên sản phẩm
                                            </dt>

                                            <dd>
                                                @Html.DisplayFor(model => model.ProdName)
                                            </dd>

                                            <dt>
                                                Từ khoá
                                            </dt>

                                            <dd>
                                                @Html.DisplayFor(model => model.MetaTitle)
                                            </dd>

                                            <dt>
                                                Mô tả
                                            </dt>

                                            <dd>
                                                @Html.DisplayFor(model => model.Description)
                                            </dd>

                                            <dt>
                                                Ảnh
                                            </dt>

                                            <dd>
                                                @{
                                                    //Lấy đường dẫn file ảnh
                                                    string imgPath = "~/wwwroot/images/" + Model.ImagePath;
                                                }
                                                <img src="@Url.Content(imgPath)" width="250" class="img-thumbnail" />
                                            </dd>

                                            <dt>
                                                Giá
                                            </dt>

                                            <dd>
                                                @Html.DisplayFor(model => model.Price)
                                            </dd>

                                        </dl>
                                    </div>
                                    <div class="divide-line">
                                        <img src="~/Assets/client/images/div-line.png" alt="" />
                                    </div>
                                    <p>
                                        @Html.ActionLink("Thêm vào giỏ", "") |
                                        @Html.ActionLink("Mua ngay", "Index")
                                    </p>
                                    <p>
                                        @Html.ActionLink("Quay lại", "Index")
                                    </p>
                                </div>
                                <div class="divide-line">
                                    <img src="~/Assets/client/images/div-line.png" alt="" />
                                </div>
                            </div>
                            <div class="col-md-3 col-md-offset-1">
                                <div class="side-bar">
                                    <div class="news-letters">
                                        <h4>Archives</h4>
                                        <div class="archives-list">
                                            <ul>
                                                <li><a href="#"><i class="fa fa-angle-right"></i>July (12)</a></li>
                                                <li><a href="#"><i class="fa fa-angle-right"></i>August (18)</a></li>
                                                <li><a href="#"><i class="fa fa-angle-right"></i>September (72)</a></li>
                                                <li><a href="#"><i class="fa fa-angle-right"></i>October (63)</a></li>
                                                <li><a href="#"><i class="fa fa-angle-right"></i>November (48))</a></li>
                                                <li><a href="#"><i class="fa fa-angle-right"></i>December (24)</a></li>
                                            </ul>
                                        </div>
                                    </div>
                                    <div class="recent-post">
                                        <h4>Recent Posts</h4>
                                        <div class="posts">
                                            <div class="recent-post">
                                                <div class="recent-post-thumb">
                                                    <img src="~/Assets/client/images/recent-post1.jpg" alt="">
                                                </div>
                                                <div class="recent-post-info">
                                                    <h6><a href="#">Vestibulum molestie odio sit amet</a></h6>
                                                    <span>24 Sep 2084</span>
                                                </div>
                                            </div>
                                            <div class="recent-post">
                                                <div class="recent-post-thumb">
                                                    <img src="~/Assets/client/images/recent-post2.jpg" alt="">
                                                </div>
                                                <div class="recent-post-info">
                                                    <h6><a href="#">Vivamus mattis quam eget urna tincidunt</a></h6>
                                                    <span>22 Sep 2084</span>
                                                </div>
                                            </div>
                                            <div class="recent-post">
                                                <div class="recent-post-thumb">
