@model BaiTapLon.Models.tblProduct

@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Xem chi tiết</h2>

<div>
    <h4>Sản phẩm</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Mã danh mục
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Categoryid)
        </dd>

        <dt>
            Tên sản phẩm
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ProdName)
        </dd>

        <dt>
            Meta Title
        </dt>

        <dd>
            @Html.DisplayFor(model => model.MetaTitle)
        </dd>

        <dt>
            Mô tả
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Description)
        </dd>

        <dt>
            Ảnh
        </dt>

        <dd>
            @{
                //Lấy đường dẫn file ảnh
                string imgPath = "~/wwwroot/images/" + Model.ImagePath;
            }
            <img src="@Url.Content(imgPath)" width="250" class="img-thumbnail" />
        </dd>

        <dt>
            Giá
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Price)
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Sửa", "Edit", new { id = Model.Pid }) |
    @Html.ActionLink("Quay lại", "Index")
</p>
